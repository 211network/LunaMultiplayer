# License: MIT

$STATUS=$args[0]
$WEBHOOK_URL=$args[1]

if (!$WEBHOOK_URL) {
  Write-Output "WARNING!!"
  Write-Output "You need to pass the WEBHOOK_URL environment variable as the second argument to this script."
  Exit
}

Write-Output "[Webhook]: Preparing the webhook..."

Switch ($STATUS) {
  "success" {
    $EMBED_COLOR=3066993
    $STATUS_MESSAGE="Passed"
    Break
  }
  "failure" {
    $EMBED_COLOR=15158332
    $STATUS_MESSAGE="Failed"
    Break
  }
  default {
    Write-Output "Default!"
    Break
  }
}

$AVATAR="https://upload.wikimedia.org/wikipedia/commons/thumb/b/bc/Appveyor_logo.svg/256px-Appveyor_logo.svg.png"

$REPOURL="https://github.com/$env:APPVEYOR_REPO_NAME/"
$URL="https://ci.appveyor.com/project/$env:APPVEYOR_ACCOUNT_NAME/$env:APPVEYOR_PROJECT_NAME"
$BUILD_VERSION = [uri]::EscapeDataString($env:APPVEYOR_BUILD_VERSION)
$TIMESTAMP="$(Get-Date -format s)Z"

$WEBHOOK_DATA="{
  ""username"": """",
  ""avatar_url"": ""$AVATAR"",
  ""content"":""New nightly build available for download"",
  ""embeds"": [ {
    ""color"": $EMBED_COLOR,
    ""author"": {
      ""name"": ""Appveyor"",
      ""url"": ""$URL"",
      ""icon_url"": ""$AVATAR""
    },
    ""title"": ""$BUILD_VERSION"",
    ""url"": ""$URL"",
    ""description"": ""Keep in mind that nightly builds might contain bugs!"",
    ""fields"": [
      {
        ""name"": """",
        ""value"": ""Client"",
        ""inline"": true
      },
      {
        ""name"": """",
        ""value"": ""[``Download``]($URL/build/job/$env:APPVEYOR_JOB_ID/artifacts/LunaMultiplayer-Debug.zip)"",
        ""inline"": true
      }
      {
        ""name"": """",
        ""value"": ""Master server"",
        ""inline"": true
      },
      {
        ""name"": """",
        ""value"": ""[``Download``]($URL/build/job/$env:APPVEYOR_JOB_ID/artifacts/LunaMultiplayerMasterServer-Debug.zip)"",
        ""inline"": true
      }
    ],
    ""timestamp"": ""$TIMESTAMP""
  } ]
}"

$HEADER = @{
    'X-Author' = 'Dagger'
}

Write-Output "[Webhook]: PayloadData: $WEBHOOK_DATA"

Invoke-RestMethod -Uri "$WEBHOOK_URL" -Method POST -UserAgent "AppVeyor-Webhook" -ContentType "application/json" -Header $HEADER -Body $WEBHOOK_DATA

Write-Output "[Webhook]: Successfully sent the webhook."